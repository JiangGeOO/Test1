<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNoSearchText2"
        android:textSize="14sp"
        android:textColor="#c9d1db"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="没有找到想要的内容哦~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNoSearchText1"
        android:textSize="14sp"
        android:textColor="#c9d1db"
        android:layout_marginTop="20dp"
        android:layout_above="@id/tvNoSearchText2"
        android:layout_centerHorizontal="true"
        android:text="OPPS~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivNoSearch"
        android:layout_above="@+id/tvNoSearchText1"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/nosearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>