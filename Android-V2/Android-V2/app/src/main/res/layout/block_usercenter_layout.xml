<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ddffffff"
    android:clickable="true"
    android:layout_gravity="left"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivUserIcon"
        android:src="@mipmap/usericon_default"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:layout_width="68dp"
        android:layout_height="68dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:clickable="true"
        android:layout_marginTop="11dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未设置昵称"
        android:textColor="@color/usercenter_textcolor"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvUserDesc"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我就是我，不一样的烟火…"
        android:textColor="@color/usercenter_textcolor"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:id="@+id/llMyCollection"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:background="@drawable/selecter_usercenter_click"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/leftAchieve"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/achieve"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/usercenter_textcolor"
            android:layout_marginLeft="10dp"
            android:text="我的收藏"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvCollectionNum"
            android:textSize="14sp"
            android:textColor="@color/usercenter_textcolor"
            android:layout_marginLeft="10dp"
            android:text="66"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/myRedBox"
        android:clickable="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selecter_usercenter_click"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/leftMoney"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/money"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/usercenter_textcolor"
            android:layout_marginLeft="10dp"
            android:text="我的红包"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAccountSetting"
        android:clickable="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selecter_usercenter_click"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/leftSetting"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/usercenter_textcolor"
            android:layout_marginLeft="10dp"
            android:text="设置"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>