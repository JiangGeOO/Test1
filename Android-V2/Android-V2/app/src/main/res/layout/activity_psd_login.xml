<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_big_back"
    tools:context="com.yidao.threekmo.activitys.PsdLoginActivity">

    <RelativeLayout
        android:id="@+id/all_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/editext_back">

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三公里"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/phone_back"
            android:textColor="#26262d"
            android:textColorHint="#b5b5b5"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:hint="请输入手机号码"/>

        <EditText
            android:id="@+id/psd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/phone_back"
            android:textColor="#26262d"
            android:textColorHint="#b5b5b5"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="请输入密码"/>

        <RelativeLayout
            android:id="@+id/denglu_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/spinner_gray_back">

            <TextView
                android:id="@+id/denglu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登陆"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/code_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"
            android:paddingBottom="20dp"
            android:textColor="#181820"/>


        <TextView
            android:id="@+id/forget_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="20dp"
            android:text="忘记密码"
            android:textColor="#181820"/>

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/clear"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/unlook_psd"/>

        <TextView
            android:id="@+id/fail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请正确填写账号或密码"
            android:textColor="#c12424"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cancle_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/cancle_back">

        <TextView
            android:id="@+id/cancle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#181820"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>
