<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="FineSelectGoods">

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1f1"
        android:paddingTop="30px"
        app:paddingTop="@{30}">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="优选商品"
            android:textColor="#333333"
            android:textSize="32px"
            android:textStyle="bold"
            android:paddingBottom="32px"
            app:paddingBottom="@{32}"
            app:layout_marginLeft="@{30}"
            app:textSize="@{32}" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/starSuggestList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:cacheColorHint="@null"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="104px"
            android:layout_marginTop="28px"
            app:layout_marginTop="@{28}"
            android:layout_below="@id/starSuggestList"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="人气商品"
            android:textSize="32px"
            app:textSize="@{32}"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_height="@{104}"
            app:paddingLeft="@{30}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title"
            android:layout_marginLeft="192px"
            app:layout_marginLeft="@{192}"
            android:layout_marginTop="38px"
            app:layout_marginTop="@{38}"
            android:text="精选品质好货"
            android:textStyle="bold"
            android:textColor="#aeaeaeae"
            android:textSize="24px"
            app:textSize="@{24}" />

    </RelativeLayout>
</layout>